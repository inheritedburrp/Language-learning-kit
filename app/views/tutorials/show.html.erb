<%- model_class = Tutorial -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tutorial.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @tutorial.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language_id) %>:</strong></dt>
  <% @language_name = @tutorial.language.name %>
  <dd><%= @language_name %></dd>
</dl>

<div class="form-actions">

  <%= link_to "Add Exercise", new_exercise_path(:tutorial_id => @tutorial.id), :class => 'btn btn-info' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tutorials_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tutorial_path(@tutorial), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tutorial_path(@tutorial),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<div>
  
</div>
</div>