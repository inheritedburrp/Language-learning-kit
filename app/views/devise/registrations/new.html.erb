<div class="container">
      <div class="jumbotron2">
          <div class="row-fluid">
              <div class="span8">
                  <h2><blockquote class="blockquote-reverse">
                    Explore the knowledge
                  </blockquote></h2>
              </div>
              <div class="span4">
                    <%= simple_form_for(resource, :as => resource_name, :url =>   registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
       <%=f.input :first_name,:required => true ,placeholder: '*Enter the first name',label:false  %>
    <%=f.input :last_name, :required => true,placeholder:'*Enter the last name', label:false %>
    <%= f.input :email, :required => true, :autofocus => true,placeholder:'*Your email', label:false %>
    <%= f.input :password, :required => true ,placeholder: '*Create password',label:false %>
    <%= f.input :password_confirmation, :required => true ,placeholder:'*Confirm password',label:false %>
      <%= f.input :gender,as: :radio_buttons, collection: ["Male","Female"],label:false %>
    <%= f.input :role, priority: [ "Student" ], collection: [ "Author", "Student"]%>
      




<%= f.button :submit, "Sign up  the awesome", :class => "btn btn-info btn-large"%>

<% end %>
              </div>
          </div>     
      
      </div>

</div>
</div>
  